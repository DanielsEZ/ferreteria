<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd"
         version="5.0">

  <display-name>Ferreteria Web</display-name>

  <context-param>
    <param-name>db.properties.path</param-name>
    <param-value>/WEB-INF/classes/db.properties</param-value>
  </context-param>

  <servlet>
    <servlet-name>AuthServlet</servlet-name>
    <servlet-class>com.ferreteria.web.AuthServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AuthServlet</servlet-name>
    <url-pattern>/auth/*</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>ProductoServlet</servlet-name>
    <servlet-class>com.ferreteria.web.ProductoServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ProductoServlet</servlet-name>
    <url-pattern>/admin/productos/*</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>UsuarioServlet</servlet-name>
    <servlet-class>com.ferreteria.web.UsuarioServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UsuarioServlet</servlet-name>
    <url-pattern>/admin/usuarios/*</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>ProveedorServlet</servlet-name>
    <servlet-class>com.ferreteria.web.ProveedorServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ProveedorServlet</servlet-name>
    <url-pattern>/admin/proveedores/*</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>BodegaServlet</servlet-name>
    <servlet-class>com.ferreteria.web.BodegaServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>BodegaServlet</servlet-name>
    <url-pattern>/bodega/*</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>ReportesServlet</servlet-name>
    <servlet-class>com.ferreteria.web.ReportesServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ReportesServlet</servlet-name>
    <url-pattern>/reportes/*</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>VentaServlet</servlet-name>
    <servlet-class>com.ferreteria.web.VentaServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>VentaServlet</servlet-name>
    <url-pattern>/ventas/*</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>CajaServlet</servlet-name>
    <servlet-class>com.ferreteria.web.CajaServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CajaServlet</servlet-name>
    <url-pattern>/caja/*</url-pattern>
  </servlet-mapping>

  <filter>
    <filter-name>AuthFilter</filter-name>
    <filter-class>com.ferreteria.security.AuthFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>AuthFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
</web-app>
